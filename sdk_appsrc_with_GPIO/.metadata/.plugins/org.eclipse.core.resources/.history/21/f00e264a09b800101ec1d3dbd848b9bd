/************************************************************************/
/*  demo.c  --  Zedboard DMA Audio + KWS Demo (with log-mel on PS)     */
/************************************************************************/

#include "demo.h"

#include "./audio/audio.h"
#include "./dma/dma.h"
#include "./intc/intc.h"
#include "./userio/userio.h"
#include "./iic/iic.h"
#include "./kws/kws_engine.h"

#include "ff.h"
#include "xil_cache.h"
#include "xaxidma.h"
#include "xparameters.h"
#include "xil_exception.h"
#include "xdebug.h"
#include "xiic.h"
#include "xgpio.h"

#include <stdint.h>
#include <math.h>
#include <string.h>

#ifdef XPAR_INTC_0_DEVICE_ID
 #include "xintc.h"
 #include "microblaze_sleep.h"
#else
 #include "xscugic.h"
 #include "sleep.h"
 #include "xil_cache.h"
#endif

/************** 可配置开关 **************/
#define KWS_ENGINE_ACCEPTS_LOGMEL  1  /* 若你的KWS引擎提供KwsEngine_ProcessLogMel，则置1使用mel推理 */
#define SAVE_WAVEFORM_TO_SD        1
#define SAVE_LOGMEL_TO_SD          1

/************** 常量 **************/
#ifndef M_PI
#define M_PI 3.14159265358979323846
#endif

#define I2S_BYTES_PER_FRAME      5U
#define AUDIO_SAMPLING_RATE      96000
#define KWS_SAMPLE_RATE          16000
#define BIAS_SEC                 0.1f

#define NR_AUDIO_SAMPLES         105600    /* 96k * 1.1s */
#define NR_KWS_SAMPLES           16000     /* 1s @ 16k */

#define KWS_DMA_TRANSFER_BYTES   (I2S_BYTES_PER_FRAME * NR_AUDIO_SAMPLES)

/* 与训练一致的 STFT / Mel 参数 */
#define N_FFT    400
#define HOP      160
#define WIN      400
#define N_MELS   40
#define F_MIN_HZ 0.0f
#define F_MAX_HZ 8000.0f  /* 16k 的 Nyquist */

/* 由 (N=16000, WIN=400, HOP=160) 得到帧数 */
#define N_FRAMES 98       /* floor((16000-400)/160)+1 = 98 */

/************** 设备实例 **************/
static XIic    sIic;
static XAxiDma sAxiDma;
static XGpio   sUserIO;
volatile sDemo_t Demo = {0};

#ifdef XPAR_INTC_0_DEVICE_ID
 static XIntc sIntc;
#else
 static XScuGic sIntc;
#endif

#ifdef XPAR_INTC_0_DEVICE_ID
const ivt_t ivt[] = {
    {XPAR_AXI_INTC_0_AXI_IIC_0_IIC2INTC_IRPT_INTR, (XInterruptHandler)XIic_InterruptHandler, &sIic},
    {XPAR_AXI_INTC_0_AXI_DMA_0_S2MM_INTROUT_INTR,  (XInterruptHandler)fnS2MMInterruptHandler, &sAxiDma},
    {XPAR_AXI_INTC_0_AXI_DMA_0_MM2S_INTROUT_INTR,  (XInterruptHandler)fnMM2SInterruptHandler, &sAxiDma},
    {XPAR_AXI_INTC_0_AXI_GPIO_0_IP2INTC_IRPT_INTR, (XInterruptHandler)fnUserIOIsr, &sUserIO}
};
#else
const ivt_t ivt[] = {
    {XPAR_FABRIC_AXI_IIC_0_IIC2INTC_IRPT_INTR, (Xil_ExceptionHandler)XIic_InterruptHandler, &sIic},
    {XPAR_FABRIC_AXI_DMA_0_S2MM_INTROUT_INTR,  (Xil_ExceptionHandler)fnS2MMInterruptHandler, &sAxiDma},
    {XPAR_FABRIC_AXI_DMA_0_MM2S_INTROUT_INTR,  (Xil_ExceptionHandler)fnMM2SInterruptHandler, &sAxiDma},
    {XPAR_FABRIC_AXI_GPIO_0_IP2INTC_IRPT_INTR, (Xil_ExceptionHandler)fnUserIOIsr, &sUserIO}
};
#endif

/************** 缓冲区 **************/
static int32_t gMicMonoQ31_96k[NR_AUDIO_SAMPLES];     /* I2S解包后 Q31 单声道 [-2^31, 2^31-1] */
static float   gWave96k[NR_AUDIO_SAMPLES];            /* 96k 波形 float [-1,1] */
static float   gWave16k[NR_KWS_SAMPLES];              /* 16k 波形 float [-1,1] */
static int32_t gWave16k_q31[NR_KWS_SAMPLES];          /* 16k 波形整型（供旧接口） */

static float   gHannWindow[WIN];                      /* Hann 窗 */
static float   gStftCos[ (N_FFT/2+1) ][WIN];          /* 201 x 400 */
static float   gStftSin[ (N_FFT/2+1) ][WIN];          /* 201 x 400 */
static float   gMelFilter[N_MELS][ (N_FFT/2+1) ];     /* 40 x 201 */
static float   gLogMel[N_MELS][N_FRAMES];             /* 40 x 98 */

static FATFS fs;
static FIL   fil;

/************** 工具函数 **************/
static int32_t sign_extend_20bit(uint32_t value) {
    if (value & 0x80000U) value |= 0xFFF00000U;
    return (int32_t)value;
}

/* LED 辅助：点亮某个LED，其余灭 */
void fnSetSingleLed(XGpio *psGpio, u8 ledIndex)
{
    u32 led_value = 0x00;
    if (ledIndex < 8) {
        led_value = (1u << ledIndex);
    } else {
        xil_printf("LED index out of range (0-7)\r\n");
    }
    XGpio_DiscreteWrite(psGpio, LED_CHANNEL, led_value);
}

/* I2S 5byte解包，自动端序检测，左右平均成单声道Q31 */
static void unpack_i2s_frames_to_q31_le_safe(const uint8_t *src,
                                             size_t frames,
                                             int32_t *dst)
{
    if (frames == 0) return;
    uint8_t b0 = src[0], b4 = src[4];
    int reversed = (b0 < b4);
    xil_printf("[I2S] Byte order: %s\r\n",
               reversed ? "reversed (little-endian DMA)" : "normal (I2S MSB-first)");

    for (size_t i = 0; i < frames; ++i) {
        size_t idx = i * I2S_BYTES_PER_FRAME;
        uint32_t B0,B1,B2,B3,B4;
        if (!reversed) {
            B0=src[idx];B1=src[idx+1];B2=src[idx+2];B3=src[idx+3];B4=src[idx+4];
        } else {
            B4=src[idx];B3=src[idx+1];B2=src[idx+2];B1=src[idx+3];B0=src[idx+4];
        }
        uint32_t left_u  = (B0<<12)|(B1<<4)|(B2>>4);
        uint32_t right_u = ((B2&0x0F)<<16)|(B3<<8)|B4;
        int32_t left  = sign_extend_20bit(left_u)  << 12;
        int32_t right = sign_extend_20bit(right_u) << 12;
        dst[i] = (left + right) / 2;
    }
}

/* 简单去噪（高通+静音压制） */
static void simple_denoise(float *buf, int n, float sr)
{
    /* 一阶高通：y[n] = x[n] - a*x[n-1] */
    const float a = 0.98f;
    for (int i = n-1; i > 0; --i)
        buf[i] = buf[i] - a*buf[i-1];

    int noise_len = (int)(sr * 0.2f);
    if (noise_len > n) noise_len = n;
    float mean_abs = 0.f;
    for (int i=0;i<noise_len;++i) mean_abs += fabsf(buf[i]);
    mean_abs /= (float)noise_len;
    float thresh = 1.5f * mean_abs;
    for (int i=0;i<n;++i)
        if (fabsf(buf[i]) < thresh) buf[i] *= 0.3f;
}

/* 线性插值重采样 96k -> 16k */
static void resample_96k_to_16k(const float *src, int src_len,
                                float *dst, int dst_len)
{
    float ratio = (float)src_len / (float)dst_len;
    for (int i = 0; i < dst_len; ++i) {
        float pos = i * ratio;
        int   i0  = (int)pos;
        int   i1  = i0 + 1;
        if (i1 >= src_len) i1 = src_len - 1;
        float frac = pos - (float)i0;
        dst[i] = src[i0]*(1.f-frac) + src[i1]*frac;
    }
}

/************** STFT & Mel 前计算 **************/
static float hz_to_mel(float f) {
    return 2595.0f * log10f(1.0f + f / 700.0f);
}
static float mel_to_hz(float m) {
    return 700.0f * (powf(10.0f, m / 2595.0f) - 1.0f);
}

/* 预生成 Hann, twiddle, mel-filterbank */
static void BuildStftAndMelTables(void)
{
    /* Hann 窗 */
    for (int n = 0; n < WIN; ++n) {
        gHannWindow[n] = 0.5f - 0.5f*cosf(2.0f*(float)M_PI*(float)n/(float)(WIN-1));
    }

    /* STFT twiddle（只算 0..N_FFT/2） */
    const int K = (N_FFT/2 + 1);
    for (int k=0; k<K; ++k) {
        for (int n=0; n<WIN; ++n) {
            float ang = -2.0f*(float)M_PI*(float)k*(float)n/(float)N_FFT;
            gStftCos[k][n] = cosf(ang);
            gStftSin[k][n] = sinf(ang);
        }
    }

    /* Mel 滤波器组（三角窗法） */
    float fmin = F_MIN_HZ;
    float fmax = F_MAX_HZ; /* 16k Nyquist */
    float mel_min = hz_to_mel(fmin);
    float mel_max = hz_to_mel(fmax);

    /* N_MELS + 2 个mel点（三角窗顶点） */
    float mel_pts[N_MELS+2];
    for (int m=0; m<N_MELS+2; ++m) {
        float mel = mel_min + (mel_max - mel_min) * (float)m / (float)(N_MELS+1);
        mel_pts[m] = mel;
    }

    /* 转回 Hz，并映射到 FFT bin (0..N_FFT/2) */
    int   Kspec = (N_FFT/2 + 1);
    float hz_pts[N_MELS+2];
    int   bin_pts[N_MELS+2];
    for (int m=0; m<N_MELS+2; ++m) {
        hz_pts[m]  = mel_to_hz(mel_pts[m]);
        int bin = (int)floorf( ( (float)N_FFT + 1.0f ) * hz_pts[m] / (float)KWS_SAMPLE_RATE );
        if (bin < 0) bin = 0;
        if (bin >= Kspec) bin = Kspec-1;
        bin_pts[m] = bin;
    }

    /* 构造 40x(201) 滤波矩阵 */
    memset(gMelFilter, 0, sizeof(gMelFilter));
    for (int m=1; m<=N_MELS; ++m) {
        int b0 = bin_pts[m-1];
        int b1 = bin_pts[m];
        int b2 = bin_pts[m+1];

        if (b0==b1) b0 = (b1>0)?(b1-1):b1;
        if (b1==b2) b2 = (b1<Kspec-1)?(b1+1):b1;

        for (int k=b0; k<=b1; ++k) {
            float w = (b1==b0)?0.f : ((float)(k-b0))/((float)(b1-b0));
            gMelFilter[m-1][k] = (w<0.f)?0.f:((w>1.f)?1.f:w);
        }
        for (int k=b1; k<=b2; ++k) {
            float w = (b2==b1)?0.f : ((float)(b2-k))/((float)(b2-b1));
            gMelFilter[m-1][k] = (w<0.f)?0.f:((w>1.f)?1.f:w);
        }
    }
}

/* 对 16k 波形计算功率谱 → log-mel */
static void ComputeLogMel(const float *wave16k, float out_logmel[N_MELS][N_FRAMES])
{
    const int Kspec = (N_FFT/2 + 1); /* 201 */
    float frame_buf[WIN];
    float pow_spec[ Kspec ];

    for (int fidx = 0; fidx < N_FRAMES; ++fidx) {
        int start = fidx * HOP;
        /* 取400点，并乘Hann窗；若越界补零（正常不会越界） */
        for (int n=0; n<WIN; ++n) {
            float x = 0.f;
            int idx = start + n;
            if (idx >= 0 && idx < NR_KWS_SAMPLES) x = wave16k[idx];
            frame_buf[n] = x * gHannWindow[n];
        }

        /* 直接DFT到 0..200 */
        for (int k=0; k<Kspec; ++k) {
            float re=0.f, im=0.f;
            const float *cptr = gStftCos[k];
            const float *sptr = gStftSin[k];
            for (int n=0; n<WIN; ++n) {
                float xn = frame_buf[n];
                re += xn * cptr[n];
                im += xn * sptr[n];
            }
            pow_spec[k] = re*re + im*im;
        }

        /* 应用mel滤波并log */
        for (int m=0; m<N_MELS; ++m) {
            float acc = 0.f;
            const float *fbank = gMelFilter[m];
            for (int k=0; k<Kspec; ++k) acc += fbank[k] * pow_spec[k];
            /* 与 torchaudio 一致：log(max(x, 1e-6)) */
            if (acc < 1e-6f) acc = 1e-6f;
            out_logmel[m][fidx] = logf(acc);
        }
    }
}

/************** 主程序 **************/
int main(void)
{
    int Status;

    xil_printf("\r\n--- Entering main() --- \r\n");
    BuildStftAndMelTables();  /* 仅一次性初始化 STFT/Mel 表 */

    Status = fnInitInterruptController(&sIntc);
    if (Status != XST_SUCCESS) { xil_printf("INTC init failed\r\n"); return XST_FAILURE; }
    Status = fnInitIic(&sIic);
    if (Status != XST_SUCCESS) { xil_printf("IIC init failed\r\n"); return XST_FAILURE; }
    Status = fnInitUserIO(&sUserIO);
    if (Status != XST_SUCCESS) { xil_printf("UserIO init failed\r\n"); return XST_FAILURE; }
    Status = fnConfigDma(&sAxiDma);
    if (Status != XST_SUCCESS) { xil_printf("DMA init failed\r\n"); return XST_FAILURE; }
    Status = fnInitAudio();
    if (Status != XST_SUCCESS) { xil_printf("Audio init failed\r\n"); return XST_FAILURE; }

    fnEnableInterrupts(&sIntc, &ivt[0], sizeof(ivt)/sizeof(ivt[0]));
    Status = KwsEngine_Initialize(KWS_DEFAULT_WEIGHT_PATH);
    Demo.fKwsEngineReady = (Status == XST_SUCCESS);

    xil_printf("\r\nInitialization done\r\n");
    xil_printf("Buttons: U=Record(MIC), D=Playback(HP)\r\n");

    while (1)
    {
        /* 录音完成：从 DDR 取数据并完成全流程预处理 */
        if (Demo.fDmaS2MMEvent)
        {
            xil_printf("\r\n[Audio] Recording done.\r\n");
            Xil_Out32(I2S_STREAM_CONTROL_REG, 0);
            Xil_Out32(I2S_TRANSFER_CONTROL_REG, 0);
            Xil_DCacheInvalidateRange((UINTPTR)MEM_BASE_ADDR, KWS_DMA_TRANSFER_BYTES);

            const uint8_t *dma_bytes = (const uint8_t *)(UINTPTR)MEM_BASE_ADDR;
            size_t total_frames = KWS_DMA_TRANSFER_BYTES / I2S_BYTES_PER_FRAME;

            /* 1) I2S解包 → 单声道Q31 */
            unpack_i2s_frames_to_q31_le_safe(dma_bytes, total_frames, gMicMonoQ31_96k);

            /* 2) Q31 → float [-1,1] */
            for (int i=0; i<NR_AUDIO_SAMPLES; ++i)
                gWave96k[i] = (float)gMicMonoQ31_96k[i] / 2147483648.0f;

            /* 3) 去噪（可关） */
            simple_denoise(gWave96k, NR_AUDIO_SAMPLES, (float)AUDIO_SAMPLING_RATE);

            /* 4) 96k → 16k */
            resample_96k_to_16k(gWave96k, NR_AUDIO_SAMPLES, gWave16k, NR_KWS_SAMPLES);

            /* （可选）保存16k波形到SD，便于Python侧对齐检查 */
#if SAVE_WAVEFORM_TO_SD
            if (f_mount(&fs, "0:/", 1) == FR_OK) {
                if (f_open(&fil, "0:/wave16k_q31.raw", FA_CREATE_ALWAYS | FA_WRITE) == FR_OK) {
                    for (int i=0;i<NR_KWS_SAMPLES;++i)
                        gWave16k_q31[i] = (int32_t)(gWave16k[i] * 32768.0f);
                    UINT bw=0; f_write(&fil, gWave16k_q31, NR_KWS_SAMPLES*sizeof(int32_t), &bw); f_close(&fil);
                    xil_printf("[SD] Saved wave16k_q31.raw (%lu bytes)\r\n", (unsigned long)bw);
                }
            }
#endif

            /* 5) 计算 log-mel: 输出 40x98 */
            ComputeLogMel(gWave16k, gLogMel);

            /* （可选）保存 logmel 到 SD（float32, col-major: 每帧40个） */
#if SAVE_LOGMEL_TO_SD
            if (f_mount(&fs, "0:/", 1) == FR_OK) {
                if (f_open(&fil, "0:/logmel.bin", FA_CREATE_ALWAYS | FA_WRITE) == FR_OK) {
                    /* 以 time-major 存: 98 帧，每帧写40个float，便于Python reshape(98,40).T */
                    UINT bw_total = 0;
                    for (int t=0; t<N_FRAMES; ++t) {
                        float col[N_MELS];
                        for (int m=0; m<N_MELS; ++m) col[m] = gLogMel[m][t];
                        UINT bw=0; f_write(&fil, col, sizeof(col), &bw); bw_total += bw;
                    }
                    f_close(&fil);
                    xil_printf("[SD] Saved logmel.bin (frames=%d, mels=%d) total %lu bytes\r\n",
                               N_FRAMES, N_MELS, (unsigned long)bw_total);
                }
            }
#endif

            /* 6) 推理 */
            if (Demo.fKwsEngineReady && KwsEngine_IsReady()) {
                u32 classIndex = 0U;
                float confidence = 0.0f;

#if KWS_ENGINE_ACCEPTS_LOGMEL
                /* 如果你的引擎支持吃logmel：形状 [N_MELS, N_FRAMES] float32 */
                Status = KwsEngine_ProcessLogMel(&gLogMel[0][0], N_MELS, N_FRAMES,
                                                 &classIndex, &confidence);
#else
                /* 兼容旧接口：仍然传时域波形（16k, 1s, int32） */
                Status = KwsEngine_ProcessRecording(gWave16k_q31, NR_KWS_SAMPLES,
                                                    &classIndex, &confidence);
#endif
                if (Status == XST_SUCCESS) {
                    int scaled = (int)(confidence * 10000.0f + 0.5f);
                    xil_printf("\r\n[KWS] class %lu (conf %d.%02d%%)\r\n",
                               (unsigned long)classIndex, scaled/100, scaled%100);
                    fnSetSingleLed(&sUserIO, classIndex % 8);
                } else {
                    xil_printf("\r\n[KWS] inference failed.\r\n");
                }
            } else {
                xil_printf("\r\n[KWS] engine not ready.\r\n");
            }

            Demo.fDmaS2MMEvent = 0;
            Demo.fAudioRecord  = 0;
        }

        /* 回放完成 */
        if (Demo.fDmaMM2SEvent) {
            xil_printf("\r\n[Audio] Playback done.\r\n");
            Xil_Out32(I2S_STREAM_CONTROL_REG, 0);
            Xil_Out32(I2S_TRANSFER_CONTROL_REG, 0);
            Demo.fDmaMM2SEvent = 0;
            Demo.fAudioPlayback = 0;
        }

        /* 错误处理 */
        if (Demo.fDmaError) {
            xil_printf("\r\n[DMA] Error. Reset states.\r\n");
            Demo.fDmaError = 0;
            Demo.fAudioPlayback = 0;
            Demo.fAudioRecord   = 0;
        }

        /* 按键处理：U=录音，D=回放 */
        if (Demo.fUserIOEvent) {
            switch (Demo.chBtn) {
            case 'u':
                if (!Demo.fAudioRecord && !Demo.fAudioPlayback) {
                    xil_printf("\r\nStart Recording (MIC)...\r\n");
                    fnSetMicInput();
                    usleep(100000);
                    fnAudioRecord(sAxiDma, NR_AUDIO_SAMPLES);
                    Demo.fAudioRecord = 1;
                } else {
                    xil_printf("\r\nBusy...\r\n");
                }
                break;
            case 'd':
                if (!Demo.fAudioRecord && !Demo.fAudioPlayback) {
                    xil_printf("\r\nStart Playback (HP)...\r\n");
                    fnSetHpOutput();
                    usleep(100000);
                    fnAudioPlay(sAxiDma, NR_AUDIO_SAMPLES);
                    Demo.fAudioPlayback = 1;
                } else {
                    xil_printf("\r\nBusy...\r\n");
                }
                break;
            default: break;
            }
            Demo.fUserIOEvent = 0;
            Demo.chBtn = 0;
        }
    }

    /* 不会到达 */
    // xil_printf("\r\n--- Exiting main() ---\r\n");
    // return XST_SUCCESS;
}
