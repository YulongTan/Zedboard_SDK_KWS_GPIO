//        size_t idx = i * I2S_BYTES_PER_FRAME;
//        uint32_t B0,B1,B2,B3,B4;
//        if (!reversed) {
//            B0 = src[idx]; B1 = src[idx+1]; B2 = src[idx+2]; B3 = src[idx+3]; B4 = src[idx+4];
//        } else {
//            B4 = src[idx]; B3 = src[idx+1]; B2 = src[idx+2]; B1 = src[idx+3]; B0 = src[idx+4];
//        }
//        uint32_t left_u  = (B0 << 12) | (B1 << 4) | (B2 >> 4);
//        uint32_t right_u = ((B2 & 0x0F) << 16) | (B3 << 8) | B4;
//        int32_t left  = sign_extend_20bit(left_u)  << 12;
//        int32_t right = sign_extend_20bit(right_u) << 12;
//        dst[i] = (int32_t)(((int64_t)left + right) / 2);
//    }
//}

static void unpack_i2s_frames_to_q31_le_safe(const uint8_t *src, size_t frames, int32_t *dst)
{
    if (frames == 0U) return;
    uint8_t b0 = src[0];
    uint8_t b4 = src[4];
    int reversed = (b0 < b4);

    for (size_t i = 0; i < frames; ++i) {
        size_t idx = i * I2S_BYTES_PER_FRAME;
        uint32_t B0,B1,B2,B3,B4;
        if (!reversed) {
            B0 = src[idx]; B1 = src[idx+1]; B2 = src[idx+2]; B3 = src[idx+3]; B4 = src[idx+4];
        } else {
            B4 = src[idx]; B3 = src[idx+1]; B2 = src[idx+2]; B1 = src[idx+3]; B0 = src[idx+4];
        }
        uint32_t left_u  = (B0 << 12) | (B1 << 4) | (B2 >> 4);
        uint32_t right_u = ((B2 & 0x0F) << 16) | (B3 << 8) | B4;
        int32_t left  = sign_extend_20bit(left_u)  << 12;
        int32_t right = sign_extend_20bit(right_u) << 12;
        dst[i] = (int32_t)right;
        for (int j=0;j<20;j++) {
                        	xil_printf("%lu\r\n",(unsigned long)dma_bytes[j]);
                        }
    }
	xil_printf("*****************************\r\n");
}

/* 96k → 16k */
static void downsample_6x_avg(const int32_t *in, int32_t *out, int input_samples)
{
    int out_samples = input_samples / DOWNSAMPLE_RATIO;
    for (int i = 0; i < out_samples; ++i) {
        int64_t acc = 0;
        for (int j = 0; j < DOWNSAMPLE_RATIO; ++j)
            acc += in[i * DOWNSAMPLE_RATIO + j];
        out[i] = (int32_t)(acc / DOWNSAMPLE_RATIO);
    }
}

/* 上采样 16k → 96k */
static void upsample_6x_for_playback(const int32_t *in16k, int32_t *out96k, int n_in)
{
    for (int i = 0; i < n_in; ++i) {
        int32_t v = in16k[i];
        for (int j = 0; j < DOWNSAMPLE_RATIO; ++j)
            out96k[i * DOWNSAMPLE_RATIO + j] = v;
    }
}

/* ===================== Biquad 高通滤波器 ===================== */
typedef struct { float b0,b1,b2,a1,a2,z1,z2; } Biquad;

static void biquad_init_highpass(Biquad *st, float fs, float fc, float q)
{
    float w0 = 2.0f * (float)M_PI * fc / fs;
    float cs = cosf(w0), sn = sinf(w0), alpha = sn / (2.0f * q);
    float b0 =  (1.0f + cs) * 0.5f;
    float b1 = -(1.0f + cs);
    float b2 =  (1.0f + cs) * 0.5f;
    float a0 =   1.0f + alpha;
    float a1 =  -2.0f * cs;
    float a2 =   1.0f - alpha;

    st->b0=b0/a0; st->b1=b1/a0; st->b2=b2/a0;
    st->a1=a1/a0; st->a2=a2/a0;
    st->z1=st->z2=0.0f;
}

static void biquad_process(Biquad *st, const float *in, float *out, int n)
{
    float z1=st->z1, z2=st->z2, b0=st->b0,b1=st->b1,b2=st->b2,a1=st->a1,a2=st->a2;
    for (int i = 0; i < n; ++i) {
        float x = in[i];
        float y = b0*x + z1;
        z1 = b1*x + z2 - a1*y;
        z2 = b2*x - a2*y;
        out[i]=y;
    }
    st->z1=z1; st->z2=z2;
}

/* ===================== 预处理 ===================== */
static void kws_preprocess_int32_like_python(const int32_t *in16k, int32_t *out16k, int n_samples, int sample_rate)
{
    static float f_in[NR_KWS_SAMPLES], f_hp[NR_KWS_SAMPLES], f_out[NR_KWS_SAMPLES];
    const float scale = 1.0f / 2147483648.0f;

    for (int i=0;i<n_samples;++i) f_in[i] = (float)in16k[i]*scale;

    Biquad hp;
    biquad_init_highpass(&hp, (float)sample_rate, 100.0f, 0.7071f);
    biquad_process(&hp, f_in, f_hp, n_samples);

    int noise_len = sample_rate / 5;
    if (noise_len > n_samples) noise_len = n_samples;
    float noise_sum=0.0f;
    for (int i=0;i<noise_len;++i) noise_sum += fabsf(f_hp[i]);
    float noise_level = (noise_len>0)?(noise_sum/noise_len):0.0f;
    float thresh = noise_level * 1.5f;

    for (int i=0;i<n_samples;++i) {
        float v=f_hp[i];
        if (fabsf(v)<thresh) v*=0.3f;
        f_out[i]=v;
    }
    for (int i=0;i<n_samples;++i) {
        float v=f_out[i];
        if(v>1.0f)v=1.0f; if(v<-1.0f)v=-1.0f;
        out16k[i]=(int32_t)(v*2147483647.0f);
    }
}

/* ===================== 保存到 SD ===================== */
static void save_16k_int32_to_sd(const char *path,const int32_t *buf,size_t samples)
{
    FRESULT fr = f_mount(&fs, "0:/", 1);
    if (fr!=FR_OK){xil_printf("[SD] mount fail %d\r\n",fr);return;}
    fr=f_open(&fil,path,FA_CREATE_ALWAYS|FA_WRITE);
    if(fr!=FR_OK){xil_printf("[SD] open %s fail %d\r\n",path,fr);return;}
    UINT bw=0; UINT size=(UINT)(samples*sizeof(int32_t));
    Xil_DCacheInvalidateRange((UINTPTR)buf,size);
    fr=f_write(&fil,buf,size,&bw); f_close(&fil);
    if(fr==FR_OK && bw==size) xil_printf("[SD] saved %s (%lu bytes)\r\n",path,(unsigned long)bw);
    else xil_printf("[SD] write fail %d (%lu/%lu)\r\n",fr,(unsigned long)bw,(unsigned long)size);
}

/* ===================== 主函数 ===================== */
int main(void)
{
    int Status;
    xil_printf("\r\n--- Entering main() ---\r\n");

    Status = fnInitInterruptController(&sIntc);
    if (Status != XST_SUCCESS) return XST_FAILURE;
    if (fnInitIic(&sIic)!=XST_SUCCESS || fnInitUserIO(&sUserIO)!=XST_SUCCESS ||
        fnConfigDma(&sAxiDma)!=XST_SUCCESS || fnInitAudio()!=XST_SUCCESS)
        return XST_FAILURE;

    fnEnableInterrupts(&sIntc, &ivt[0], sizeof(ivt)/sizeof(ivt[0]));
    Status = KwsEngine_Initialize(KWS_DEFAULT_WEIGHT_PATH);
    if (Status!=XST_SUCCESS){xil_printf("KWS init failed\r\n");return Status;}
    Demo.fKwsEngineReady=1; xil_printf("KWS engine init OK\r\n");

    xil_printf("Press BTNU to record, preprocess, auto-play and run KWS\r\n");

    while(1){
        if(Demo.fDmaS2MMEvent){
            xil_printf("\r\n[DMA] Recording done\r\n");
            Xil_Out32(I2S_STREAM_CONTROL_REG,0);
            Xil_Out32(I2S_TRANSFER_CONTROL_REG,0);
            Xil_DCacheInvalidateRange((UINTPTR)MEM_BASE_ADDR,KWS_DMA_TRANSFER_BYTES);

            const size_t total_frames = KWS_DMA_TRANSFER_BYTES / I2S_BYTES_PER_FRAME;
            const size_t avail_frames = (total_frames>START_OFFSET_FRAMES)?(total_frames-START_OFFSET_FRAMES):0U;

            if(avail_frames>=SEGMENT_FRAMES){
                const uint8_t *dma_bytes=(const uint8_t*)(uintptr_t)MEM_BASE_ADDR;
                for (int i=0;i<20;i++) {
                	xil_printf("%lu\r\n",(unsigned long)dma_bytes[i]);
                }
                unpack_i2s_frames_to_q31_le_safe(dma_bytes,total_frames,gMicMono96k);
                for (int i=0;i<20;i++) {
                                	xil_printf("%lu\r\n",(unsigned long)gMicMono96k[i]);
                                }
                /* 写入96k解包后的音频 */
                save_16k_int32_to_sd("0:/record.raw", gMicMono96k, SEGMENT_FRAMES);
                downsample_6x_avg(gMicMono96k+START_OFFSET_FRAMES,gKws16k,SEGMENT_FRAMES);
//                kws_preprocess_int32_like_python(gKws16k,gKws16k_proc,NR_KWS_SAMPLES,KWS_TARGET_SR);

                /* === 自动播放预处理结果 === */
                xil_printf("[PLAY] Auto playback of preprocessed 1s audio...\r\n");
                upsample_6x_for_playback(gKws16k,gPlayback96k,NR_KWS_SAMPLES);
                fnSetHpOutput(); usleep(100000);
                fnAudioPlay(sAxiDma,SEGMENT_FRAMES);

//                save_16k_int32_to_sd(KWS_PROC_RAW_PATH,gKws16k,NR_KWS_SAMPLES);

                u32 cls=0; float conf=0.0f;
                Status=KwsEngine_ProcessRecording(gKws16k,NR_KWS_SAMPLES,&cls,&conf);
                if(Status==XST_SUCCESS){
                    int scaled=(int)(conf*10000.0f+0.5f);
                    xil_printf("KWS: class=%lu, conf=%d.%02d%%\r\n",(unsigned long)cls,scaled/100,scaled%100);
                    fnSetSingleLed(&sUserIO,(cls-2)%8);
                }else xil_printf("KWS inference failed\r\n");
            }else xil_printf("[ERR] not enough frames\r\n");

            Demo.fDmaS2MMEvent=0; Demo.fAudioRecord=0;
        }

        if(Demo.fDmaMM2SEvent){
            xil_printf("Playback done\r\n");
            Xil_Out32(I2S_STREAM_CONTROL_REG,0);
            Xil_Out32(I2S_TRANSFER_CONTROL_REG,0);
            Demo.fDmaMM2SEvent=0; Demo.fAudioPlayback=0;
        }

        if(Demo.fUserIOEvent){
            if(Demo.chBtn=='u' && !Demo.fAudioRecord && !Demo.fAudioPlayback){
                xil_printf("Start Recording...\r\n");
                fnSetMicInput(); usleep(100000);
                fnAudioRecord(sAxiDma,NR_AUDIO_SAMPLES);
                Demo.fAudioRecord=1;
            }else if(Demo.chBtn=='d' && !Demo.fAudioRecord && !Demo.fAudioPlayback){
                xil_printf("Start Playback...\r\n");
                fnSetHpOutput(); usleep(100000);
                fnAudioPlay(sAxiDma,NR_AUDIO_SAMPLES);
                Demo.fAudioPlayback=1;
            }
            Demo.fUserIOEvent=0; Demo.chBtn=0;
        }
    }
    return 0;
}
